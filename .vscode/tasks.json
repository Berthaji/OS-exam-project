{
    "tasks": [
        {
            "type": "cppbuild",
            "label": "C/C++: gcc compila il file attivo",
            "command": "/usr/bin/gcc",
            "args": [
                "-fdiagnostics-color=always",

                "-g",
                "${file}",
                
                "${fileDirname}/Scene.c",
                "${fileDirname}/task.c",
                
                //"${fileDirname}/*.h",

                "-o",
                "${fileDirname}/${fileBasenameNoExtension}",
                "-lncurses"
            ],

      

            "options": {
                "cwd": "${fileDirname}"
            },
            "problemMatcher": [
                "$gcc"
            ],
            "group": {
                "kind": "build",
                "isDefault": true
            },
            "detail": "Attivit√† generata dal debugger."
        }
    ],
    "version": "2.0.0"
}